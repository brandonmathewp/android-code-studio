<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Main Content Area -->
    <LinearLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Empty State Content -->
        <LinearLayout
            android:id="@+id/empty_state_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp"
            android:visibility="visible">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="0dp"
                app:cardCornerRadius="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginBottom="16dp"
                        android:src="@drawable/ic_add"
                        android:tint="?attr/colorPrimary"
                        android:alpha="0.6"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No Terminal Session"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurface"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Create your first terminal session"
                        android:textSize="14sp"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:layout_marginBottom="24dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/create_terminal_button"
                        style="@style/Widget.Material3.Button.TonalButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Initialize Terminal"
                        app:icon="@android:drawable/ic_input_add"
                        app:cornerRadius="8dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <!-- Terminal Content -->
        <LinearLayout
            android:id="@+id/terminal_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

            <!-- Tab Layout with Menu Button -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="?attr/colorSurface"
                android:elevation="2dp">

                <!-- Menu Button (Shows when rail is hidden) -->
                <ImageView
                    android:id="@+id/menu_button"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:padding="12dp"
                    android:src="@drawable/ic_menu_animated"
                    android:tint="?attr/colorOnSurface"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:visibility="visible"
                    android:contentDescription="Menu" />

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/session_tabs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:tabMode="scrollable"
                    app:tabGravity="start" />

            </LinearLayout>

            <!-- Terminal View -->
            <com.termux.view.TerminalView
                android:id="@+id/terminal_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:padding="8dp"
                android:textIsSelectable="true"
                android:background="@drawable/filled_chip_background"
                android:focusableInTouchMode="true"
                android:scrollbars="vertical"
                tools:ignore="UnusedAttribute" />

            <!-- Extra Keys Bar (at bottom) -->
            <include
                android:id="@+id/extra_keys_include"
                layout="@layout/view_terminal_toolbar_extra_keys_outer" />
            
        </LinearLayout>
      
        <!-- Settings Content -->
        <include
          layout="@layout/fragment_terminal_sec_settings"/>


    </LinearLayout>

    <!-- Navigation Rail (Overlays on top) -->
    <com.google.android.material.navigationrail.NavigationRailView
        android:id="@+id/navigation_rail"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:layout_gravity="start"
        app:labelVisibilityMode="labeled"
        android:elevation="4dp"
        android:background="?attr/colorSurface"
        app:menu="@menu/terminal_navigation_menu" />

</FrameLayout>